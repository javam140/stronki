    <script>
        function delta() {
            var a = document.getElementById("a").value;
            var b = document.getElementById("b").value;
            var c = document.getElementById("c").value;
            var wdelta = (b*b)-4*a*c;
            document.getElementById("box").innerHTML = "<br>delta = "+wdelta;
            if (wdelta>=0) {
                var pierwiastekzdelta = Math.sqrt(wdelta);
                if (pierwiastekzdelta == Math.floor(pierwiastekzdelta)) {
                    x1 = (-b-pierwiastekzdelta)/(2*a);
                    document.getElementById("box").innerHTML += "<br>x1 = "+x1;
                    x2 = (-b+pierwiastekzdelta)/(2*a);
                    document.getElementById("box").innerHTML += "<br>x2 = "+x2;
                }
                else {
                    dwaa = a*2;
                    x1 = '<table border="1" rules="all" frame="void"><tr><td>-'+b+'-√'+wdelta+'</td></tr><tr><td>'+dwaa+'</td></tr></table>';
                    x2 = '<table border="1" rules="all" frame="void"><tr><td>-'+b+'+√'+wdelta+'</td></tr><tr><td>'+dwaa+'</td></tr></table>';
                    document.getElementById("box").innerHTML += "<br>x1 = <br><br>"+x1;
                    document.getElementById("box").innerHTML += "<br>x2 = <br><br>"+x2;
                }
            }
        }
    </script>
